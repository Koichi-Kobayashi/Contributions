<Page
    x:Class="Contributions.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Contributions.Helpers"
    xmlns:local="clr-namespace:Contributions.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>

    <Grid Margin="8">
        <StackPanel>
            <TextBlock
                Margin="0,24,0,0"
                FontSize="20"
                FontWeight="Medium"
                Text="About Contributions" />
            <TextBlock Margin="0,12,0,0" Text="{Binding ViewModel.AppVersion, Mode=OneWay}" />

            <Separator Margin="0,12,0,12" />

            <TextBlock
                FontSize="16"
                FontWeight="Medium"
                Text="Options" />
            <CheckBox
                Margin="0,12,0,0"
                Content="{helpers:Translate Key=Settings_AutoCopyCheckbox}"
                IsChecked="{Binding ViewModel.AutoCopyToClipboard}" />
            <TextBlock
                Margin="0,16,0,0"
                FontSize="16"
                FontWeight="Medium"
                Text="Share text" />
            <TextBox
                Height="40"
                Margin="0,6,0,0"
                Text="{Binding ViewModel.ShareText, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="0,12,0,0"
                FontSize="16"
                FontWeight="Medium"
                Text="Share URL" />
            <ComboBox
                Height="40"
                Margin="0,6,0,0"
                DisplayMemberPath="DisplayName"
                ItemsSource="{Binding ViewModel.ShareUrlOptions}"
                SelectedItem="{Binding ViewModel.SelectedShareUrlOption}" />
            <TextBlock
                Margin="0,12,0,0"
                FontSize="16"
                FontWeight="Medium"
                Text="Share hashtags" />
            <StackPanel Margin="0,6,0,0" Orientation="Horizontal">
                <TextBox
                    Width="160"
                    Height="40"
                    Margin="0,0,8,0"
                    Text="{Binding ViewModel.ShareHashtag1, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    Width="160"
                    Height="40"
                    Margin="0,0,8,0"
                    Text="{Binding ViewModel.ShareHashtag2, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    Width="160"
                    Height="40"
                    Text="{Binding ViewModel.ShareHashtag3, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <TextBlock
                Margin="0,16,0,0"
                FontSize="16"
                FontWeight="Medium"
                Text="Language" />
            <ComboBox
                Height="40"
                Margin="0,6,0,0"
                DisplayMemberPath="DisplayName"
                ItemsSource="{Binding ViewModel.Languages}"
                SelectedItem="{Binding ViewModel.SelectedLanguage}" />
        </StackPanel>
    </Grid>
</Page>
