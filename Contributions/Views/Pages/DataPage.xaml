<Page
    x:Class="Contributions.Views.Pages.DataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Contributions.Helpers"
    xmlns:local="clr-namespace:Contributions.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DataPage"
    d:DataContext="{d:DesignInstance local:DataPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="600"
    d:DesignWidth="1320"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </Page.Resources>

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="385" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  左側パネル  -->
        <Border
            Grid.Column="0"
            Padding="0"
            Background="{DynamicResource ApplicationBackgroundBrush}"
            CornerRadius="6">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,30"
                    FontSize="22"
                    FontWeight="SemiBold"
                    Text="GitHub Contributions Chart Generator" />

                <TextBlock Text="GitHub URL / Username" />
                <TextBox
                    Height="36"
                    Margin="0,6,0,12"
                    Text="{Binding ViewModel.Url, UpdateSourceTrigger=PropertyChanged}" />

                <ui:Button
                    Margin="0,0,0,12"
                    Appearance="Primary"
                    Command="{Binding ViewModel.GenerateCommand}"
                    Content="Generate"
                    IsEnabled="{Binding ViewModel.CanGenerate}" />

                <Grid Height="24" Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal">
                        <ui:ProgressRing
                            Width="20"
                            Height="20"
                            IsIndeterminate="{Binding ViewModel.IsLoading}"
                            Visibility="{Binding ViewModel.IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <TextBlock
                            Margin="8,0,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Loading..."
                            Visibility="{Binding ViewModel.IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>
                </Grid>

                <Separator Margin="0,12,0,12" />

                <TextBlock Text="Theme Mode" />
                <ComboBox
                    Height="40"
                    Margin="0,6,0,12"
                    ItemsSource="{Binding ViewModel.ThemeModes}"
                    SelectedItem="{Binding ViewModel.ThemeMode}" />

                <TextBlock Text="Palette" />
                <ComboBox
                    Height="40"
                    Margin="0,6,0,12"
                    ItemsSource="{Binding ViewModel.PaletteItems}"
                    SelectedValue="{Binding ViewModel.PaletteName}"
                    SelectedValuePath="Name">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Name}" />
                                <ItemsControl
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Right"
                                    ItemsSource="{Binding DisplayGrades}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Width="14"
                                                Height="14"
                                                Margin="2,0,0,0"
                                                Background="{Binding}"
                                                CornerRadius="2" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Year" />
                <ComboBox
                    Height="40"
                    Margin="0,6,0,12"
                    IsEnabled="{Binding ViewModel.HasResult}"
                    ItemsSource="{Binding ViewModel.AvailableYears}"
                    SelectedItem="{Binding ViewModel.SelectedYear}" />

                <ui:Button
                    Margin="0,6,0,12"
                    Appearance="Secondary"
                    Command="{Binding ViewModel.ClearCacheCommand}"
                    Content="Clear cache"
                    IsEnabled="{Binding ViewModel.CanGenerate}" />
            </StackPanel>
        </Border>

        <!--  右側パネル  -->
        <ScrollViewer
            Grid.Column="1"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <ui:Button
                    x:Name="CopyButton"
                    Margin="0,12,0,16"
                    HorizontalAlignment="Center"
                    Appearance="Primary"
                    Click="CopyButton_Click"
                    Content="{Binding ViewModel.CopyButtonText}">
                    <ui:Button.Style>
                        <Style
                            BasedOn="{StaticResource {x:Type ui:Button}}"
                            TargetType="ui:Button">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Setter Property="IsEnabled" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ViewModel.HasResult}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ViewModel.IsLoading}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ui:Button.Style>
                </ui:Button>

                <ui:Button
                    x:Name="ShareXButton"
                    Margin="0,0,0,16"
                    HorizontalAlignment="Center"
                    Appearance="Secondary"
                    Click="ShareXButton_Click"
                    Content="Post to X"
                    IsEnabled="{Binding ViewModel.CanShareToX}">
                    <ui:Button.Style>
                        <Style
                            BasedOn="{StaticResource {x:Type ui:Button}}"
                            TargetType="ui:Button">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ViewModel.HasResult}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ViewModel.IsLoading}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ui:Button.Style>
                </ui:Button>

                <Grid
                    Width="{Binding ElementName=ChartCanvas, Path=Width}"
                    Height="{Binding ElementName=ChartCanvas, Path=Height}">
                    <skia:SKElement
                        x:Name="ChartCanvas"
                        Width="900"
                        Height="320"
                        PaintSurface="ChartCanvas_PaintSurface"
                        Visibility="{Binding ViewModel.CanShowChart, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Visibility="{Binding ViewModel.IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ui:ProgressRing Width="20" Height="20" IsIndeterminate="True" />
                        <TextBlock
                            Margin="8,0,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Loading..." />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
